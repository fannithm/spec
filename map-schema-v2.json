{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Fannithm Map JSON v2-alpha.2",
  "type": "object",
  "$defs": {
    "uuid": {
      "type": "string",
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
    },
    "beatInteger": {
      "type": "integer",
      "minimum": 0
    },
    "beatNumerator": {
      "type": "integer",
      "minimum": 0
    },
    "beatDenominator": {
      "type": "integer",
      "minimum": 1
    },
    "beat": {
      "type": "object",
      "properties": {
        "integer": {
          "$ref": "#/$defs/beatInteger"
        },
        "numerator": {
          "$ref": "#/$defs/beatNumerator"
        },
        "denominator": {
          "$ref": "#/$defs/beatDenominator"
        }
      },
      "required": ["integer"],
      "additionalProperties": false,
      "dependentRequired": {
        "numerator": ["denominator"],
        "denominator": ["numerator"]
      }
    },
    "integerLane": {
      "type": "integer",
      "minimum": 0,
      "maximum": 11
    },
    "integerWidth": {
      "type": "integer",
      "minimum": 1,
      "maximum": 12
    },
    "timeline": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "#/$defs/uuid"
        },
        "name": {
          "type": "string"
        },
        "speed": {
          "type": "number",
          "$comment": "default value: 1"
        }
      },
      "required": ["id", "name"],
      "additionalProperties": false
    },
    "bpm": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "#/$defs/uuid"
        },
        "timeline": {
          "$ref": "#/$defs/uuid"
        },
        "beat": {
          "$ref": "#/$defs/beat"
        },
        "bpm": {
          "type": "number",
          "exclusiveMinimum": 0
        }
      },
      "required": ["id", "timeline", "beat", "bpm"],
      "additionalProperties": false
    },
    "noteFlick": {
      "type": "string",
      "enum": ["none", "up", "left", "right"]
    },
    "note": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "#/$defs/uuid"
        },
        "timeline": {
          "$ref": "#/$defs/uuid"
        },
        "beat": {
          "$ref": "#/$defs/beat"
        },
        "lane": {
          "$ref": "#/$defs/integerLane"
        },
        "width": {
          "$ref": "#/$defs/integerWidth"
        },
        "flick": {
          "$ref": "#/$defs/noteFlick"
        },
        "critical": {
          "type": "boolean"
        },
        "trace": {
          "type": "boolean"
        }
      },
      "required": ["id", "timeline", "beat", "lane", "width"],
      "additionalProperties": false
    },
    "slideNodeType": {
      "type": "string",
      "enum": ["start", "invisible", "visible", "end"]
    },
    "slideNodeCurve": {
      "type": "string",
      "enum": [
        "none",
        "linear",
        "ease-in",
        "ease-out",
        "ease-in-out",
        "cubic-bezier"
      ]
    },
    "slideNode": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "#/$defs/uuid"
        },
        "type": {
          "$ref": "#/$defs/slideNodeType"
        },
        "beat": {
          "$ref": "#/$defs/beat"
        },
        "lane": {
          "$ref": "#/$defs/integerLane"
        },
        "width": {
          "$ref": "#/$defs/integerWidth"
        },
        "curve": {
          "$ref": "#/$defs/slideNodeCurve"
        },
        "bezier": {
          "type": "array",
          "items": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          },
          "minItems": 4,
          "maxItems": 4
        },
        "flick": {
          "$ref": "#/$defs/noteFlick"
        },
        "critical": {
          "type": "boolean"
        }
      },
      "required": ["id", "type", "beat"],
      "additionalProperties": false,
      "allOf": [
        {
          "$comment": "make lane, width and curve optional for visible node",
          "if": {
            "type": "object",
            "properties": {
              "type": {
                "enum": ["visible"]
              }
            }
          },
          "then": {
            "$comment": "lane, width and curve is optional for visible note, but you must set all of them if needed",
            "dependentRequired": {
              "lane": ["width", "curve"],
              "width": ["lane", "curve"],
              "curve": ["lane", "width"]
            }
          },
          "else": {
            "required": ["lane", "width", "curve"]
          }
        },
        {
          "$comment": "add critical and flick to end node",
          "if": {
            "type": "object",
            "properties": {
              "type": {
                "enum": ["end"]
              }
            }
          },
          "then": {
            "type": "object",
            "properties": {
              "curve": {
                "enum": ["none"]
              }
            }
          },
          "else": {
            "type": "object",
            "properties": {
              "flick": false,
              "critical": false
            }
          }
        },
        {
          "$comment": "make bezier required for bezier curve",
          "if": {
            "type": "object",
            "properties": {
              "curve": {
                "enum": ["cubic-bezier"]
              }
            },
            "required": ["curve"]
          },
          "then": {
            "type": "object",
            "required": ["bezier"]
          },
          "else": {
            "type": "object",
            "properties": {
              "bezier": false
            }
          }
        }
      ]
    },
    "slide": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "#/$defs/uuid"
        },
        "timeline": {
          "$ref": "#/$defs/uuid"
        },
        "critical": {
          "type": "boolean"
        },
        "nodes": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/slideNode"
          },
          "minItems": 2
        }
      },
      "required": ["id", "timeline", "nodes"],
      "additionalProperties": false
    },
    "slideDecorationColor": {
      "type": "string",
      "enum": ["green", "yellow"]
    },
    "slideDecorationNode": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "#/$defs/uuid"
        },
        "beat": {
          "$ref": "#/$defs/beat"
        },
        "lane": {
          "type": "number",
          "minimum": 0,
          "maximum": 11
        },
        "width": {
          "type": "number",
          "minimum": 0,
          "maximum": 12
        },
        "curve": {
          "$ref": "#/$defs/slideNodeCurve"
        }
      },
      "required": ["id", "beat", "lane", "width", "curve"],
      "additionalProperties": false
    },
    "slideDecoration": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "#/$defs/uuid"
        },
        "timeline": {
          "$ref": "#/$defs/uuid"
        },
        "color": {
          "$ref": "#/$defs/slideDecorationColor"
        },
        "nodes": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/slideDecorationNode"
          },
          "minItems": 2
        }
      },
      "required": ["id", "timeline", "color", "nodes"],
      "additionalProperties": false
    }
  },
  "properties": {
    "$schema": {
      "type": "string"
    },
    "$version": {
      "$comment": "The format version of the map file",
      "type": "string"
    },
    "offset": {
      "type": "number"
    },
    "timelines": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/timeline"
      },
      "minItems": 1
    },
    "bpms": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/bpm"
      },
      "minItems": 1
    },
    "notes": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/note"
      }
    },
    "slides": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/slide"
      }
    },
    "decorations": {
      "type": "object",
      "properties": {
        "slides": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/slideDecoration"
          }
        }
      }
    }
  },
  "required": ["$version", "timelines", "bpms"],
  "additionalProperties": false
}
